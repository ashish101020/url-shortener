<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        h1 {
            color: #1DB954;
            margin-bottom: 20px;
        }

        form {
            background-color: #1E1E1E;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            margin-bottom: 20px;
            width: 100%;
            max-width: 400px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-size: 1em;
            color: #b3b3b3;
        }

        input[type="text"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 12px;
            border: 1px solid #333;
            border-radius: 4px;
            background-color: #222;
            color: #ffffff;
        }

        button {
            background-color: #1DB954;
            border: none;
            padding: 10px 20px;
            color: white;
            font-size: 1em;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }

        button:hover {
            background-color: #1AA34A;
        }

        table {
            width: 90%;
            max-width: 800px;
            border-collapse: collapse;
            margin: 20px 0;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #333;
        }

        thead {
            background-color: #1DB954;
        }

        th {
            color: #ffffff;
        }

        tr:nth-child(even) {
            background-color: #1E1E1E;
        }

        tr:nth-child(odd) {
            background-color: #2E2E2E;
        }

        tr:hover {
            background-color: #3E3E3E;
        }

        a {
            color: #1DB954;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .container {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <div class="container">
        <h1>URL-Shortener</h1>
        <% if (locals.id) { %>
            <p>URL Generated: http://localhost:6700/url/<%= id %></p>
        <% } %>
        <div>
            <form method="POST" action="url">
                <label for="original-url">Enter your Original URL</label>
                <input type="text" id="original-url" name="url" placeholder="https://example.com">
                <button type="submit">Generate</button>
            </form>
        </div>
        <div>
            <table>
                <thead>
                    <tr>
                        <th>S. No</th>
                        <th>ShortId</th>
                        <th>RedirectURL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>    
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
